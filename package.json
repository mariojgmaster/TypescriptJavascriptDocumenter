{
	"name": "typescriptdocumenter",
	"displayName": "TypeScript and JavaScript Documenter",
	"description": "This extension will help to document the typescript code",
	"version": "1.1.0",
	"publisher": "MarioJorgeOliveira",
	"engines": {
		"vscode": "^1.55.0"
	},
	"categories": [
		"Language Packs",
		"Formatters",
		"Other"
	],
	"author": {
		"name": "Mario Oliveira"
	},
	"license": "GPLv3",
	"icon": "assets/images/icon.webp",
	"activationEvents": [
		"onLanguage:javascript",
		"onLanguage:javascriptreact",
		"onLanguage:typescript",
		"onLanguage:typescriptreact"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "typescriptdocumenter.helloWorld",
				"title": "Hello World"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.55.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	}
}
